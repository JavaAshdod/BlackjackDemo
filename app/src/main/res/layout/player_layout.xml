<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/tvPlayerScore"
        android:layout_alignRight="@+id/player_cards_layout"
        android:text="Score: 18" />

    <RelativeLayout
        android:id="@+id/player_cards_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStand">

        <ImageView
            android:id="@+id/ivPlayerCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:src="@drawable/ace_of_clubs" />

    </RelativeLayout>


    <Button
        android:id="@+id/btnStand"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Stand" />

    <Button
        android:id="@+id/btnDraw"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/player_cards_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/player_cards_layout"
        android:layout_alignTop="@+id/btnStand"
        android:text="Draw" />
</RelativeLayout>